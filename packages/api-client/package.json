    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "build": "tsc"
  },
  "devDependencies": {
    "@jfontanez/eslint-config": "workspace:*",
    "@jfontanez/typescript-config": "workspace:*",
    "@types/node": "^22.15.3",
    "eslint": "^9.34.0",
    "typescript": "5.9.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "zod": "^4.1.11"
  }
}
